@model List<Product>
@{
    ViewData["Title"] = "All Products";
}
@section datatable
    {
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />

}

<div>
    <a asp-action="Insert" class="btn btn-primary mb-4 mt-4 w-25 m-auto">Insert New Product</a>
</div>
@if (Model.Count == 0)
{
    <h1>No products has been inserted yet</h1>
}
else
{
    <div class="card rounded shadow p-3">
        <table class="table-hover table table-striped table-bordered text-center" id="table_id">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Quentity PerUnit
                    </th>
                    <th>
                        Supplier Name
                    </th>
                    <th>
                        unit In Stock
                    </th>
                    <th>
                        Units In Order
                    </th>
                    <th>
                        Update
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @item.productName
                        </th>
                        <th>
                            @item.QuentityPerUnit
                        </th>
                        <th>
                            @item.Supplier.SupplierName
                        </th>
                        <th>
                            @item.unitInStock
                        </th>
                        <th>
                            @item.UnitsInOrder
                        </th>
                        <th>
                            <a asp-action="Update" asp-route-id="@item.productId" class="btn btn-warning">Update</a>
                        </th>
                        <th>
                            <a asp-action="Delete" asp-route-id="@item.productId" class="btn btn-danger">Delete</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@section Scripts
    {
    <script src="~/lib/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/lib/datatables/js/datatables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#table_id').dataTable({})
        });
    </script>
}

