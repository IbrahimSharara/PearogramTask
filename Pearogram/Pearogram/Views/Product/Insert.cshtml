@model Product
@inject ISupplierRepository repo
@{
    ViewData["Title"] = "Insert New Product";
    var supplier = repo.GetAll();
    SelectList items = new SelectList(supplier, nameof(Supplier.SupplierID), nameof(Supplier.SupplierName));
}
<form class="container" asp-action="Insert" method="post">
    <div class="container mt-3">
        <label asp-for="@Model.productId" hidden></label>
        <input asp-for="@Model.productId" class="form-control" hidden />
        <span class="text-danger" asp-validation-for="@Model.productId"></span>
    </div>
    <div class="container mt-3">
        <label asp-for="@Model.productName"></label>
        <input type="text" class="form-control" asp-for="@Model.productName" />
        <span class="text-danger" asp-validation-for="@Model.productName"></span>
    </div>
    <div class="container mt-3">
        <label asp-for="@Model.QuentityPerUnit"></label>
        <input type="number" class="form-control" asp-for="@Model.QuentityPerUnit" />
        <span class="text-danger" asp-validation-for="@Model.QuentityPerUnit"></span>
    </div>
    <div class="container mt-3">
        <label asp-for="@Model.ReorderLevel"></label>
        <input type="number" class="form-control" asp-for="@Model.ReorderLevel" />
        <span class="text-danger" asp-validation-for="@Model.ReorderLevel"></span>
    </div>
    <div class="container mt-3">
        <label asp-for="@Model.unitInStock"></label>
        <input type="number" class="form-control" asp-for="@Model.unitInStock" />
        <span class="text-danger" asp-validation-for="@Model.unitInStock"></span>
    </div>
    <div class="container mt-3">
        <label asp-for="@Model.UnitsInOrder"></label>
        <input type="number" class="form-control" asp-for="@Model.UnitsInOrder" />
        <span class="text-danger" asp-validation-for="@Model.UnitsInOrder"></span>

    </div>
    <div class="container mt-3">
        <label asp-for="@Model.SupplierID"></label>
        <select asp-items="items" asp-for="@Model.SupplierID" class=" form-control">
            <option value="-1">
                -- select Supplier --
            </option>
        </select>
    </div>
    <div class="container text-center ">
        <input type="submit" class="btn btn-success w-25" value="Save Changes" />
        <a class="btn btn-warning w-25 m-3" asp-action="Index">Back</a>
    </div>
</form>
@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
