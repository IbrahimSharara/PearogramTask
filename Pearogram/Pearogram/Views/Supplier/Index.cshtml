@model List<Supplier>
@{
    ViewData["Title"] = "All Suppliers";
}
@section datatable
    {
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}
<a asp-action="Insert" class="btn btn-primary mb-4 mt-4 w-25 m-auto">Insert New Supplier</a>
@if (Model.Count == 0)
{
    <h1>No Supplier has been inserted yet</h1>
}
else
{
    <div class="card rounded shadow p-3">
        <table id="table_id" class="table-hover table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>
                        Supplier Name
                    </th>
                    <th>
                        Update
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @item.SupplierName
                        </th>
                        <th>
                            <a asp-action="Update" class="btn btn-warning" asp-route-id="@item.SupplierID">Update</a>
                        </th>
                        <th>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.SupplierID">Delete</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@section Scripts
    {
    <script src="~/lib/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/lib/datatables/js/datatables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#table_id').dataTable({

            })
        });
    </script>
}